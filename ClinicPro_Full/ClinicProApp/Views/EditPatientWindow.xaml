<Window x:Class="ClinicProApp.Views.EditPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="إضافة / تعديل مريض" Height="420" Width="520" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="معلومات المريض" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,6">
            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Width="120" VerticalAlignment="Center">رقم الملف:</TextBlock>
                <TextBox Name="txtFileNumber" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Width="120" VerticalAlignment="Center">الاسم الأول:</TextBlock>
                <TextBox Name="txtFirstName" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Width="120" VerticalAlignment="Center">اللقب:</TextBlock>
                <TextBox Name="txtLastName" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Width="120" VerticalAlignment="Center">تاريخ الميلاد:</TextBlock>
                <DatePicker Name="dpDOB" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Width="120" VerticalAlignment="Center">الهاتف:</TextBlock>
                <TextBox Name="txtPhone" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Width="120" VerticalAlignment="Top">العنوان:</TextBlock>
                <TextBox Name="txtAddress" Width="300" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Width="120" VerticalAlignment="Top">ملاحظات:</TextBlock>
                <TextBox Name="txtNotes" Width="300" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8">
            <Button Content="حفظ" Width="100" Margin="6" Click="BtnSave_Click"/>
            <Button Content="إلغاء" Width="100" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
